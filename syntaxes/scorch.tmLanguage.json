{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "scorch",
	"patterns": [
		{
			"include": "#comments"
		},
		{
			"include": "#strings"
		},
		{
			"include": "#keywords"
		},
		{
			"include": "#numbers"
		},
		{
			"include": "#variables"
		},
		{
			"include": "#operators"
		}
	],
	"repository": {
		"comments": {
			"name": "comment.line.scorch",
			"begin": "//",
			"end": "$"
		},
		"strings": {
			"name": "string.quoted.double.scorch",
			"begin": "\"",
			"end": "\"",
			"patterns": [
				{
					"name": "constant.character.escape.scorch",
					"match": "\\\\."
				}
			]
		},
		"operators": {
			"patterns": [
				{
					"name": "keyword.operator.scorch",
					"match": "\\+|-|\\*|/|\\^|\\(|\\)|\\{|:=|\\}|\\[|\\]|<|>|=|\\.|,|:|;|\\||&|!"
				}
			]
		},
		"keywords": {
			"patterns": [{
				"name": "keyword.control.scorch",
				"match": "\\b(if|repeat|const|var|break|new|struct|return)\\b"
			}]
		},
		"numbers": {
			"patterns": [
				{
					"name": "constant.numeric.integer.scorch",
					"match": "\\b[0-9]+\\b"
				},
				{
					"name": "constant.numeric.float.scorch",
					"match": "\\b[0-9]+\\.[0-9]+\\b"
				}
			]
		}
	},
	"scopeName": "source.scorch"
}